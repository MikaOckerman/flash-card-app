{
  "devDependencies": {
    "concurrently": "^9.1.0",
    "tailwindcss": "^3.4.17"
  },
  "scripts": {
    "dev": "concurrently \"flask run\" \"npx tailwindcss -i ./static/css/styles.css -o ./static/css/tailwind.css --watch\"",
    "build:css": "npx tailwindcss -i ./static/css/styles.css -o ./static/css/tailwind.css --minify",
    "watch:css": "npx tailwindcss -i ./static/css/styles.css -o ./static/css/tailwind.css --watch"
  }
}
